<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".level3_2"
    android:background="@color/black">

    <EditText
        android:id="@+id/ruselt6"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="85dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/adamina"
        android:scrollbarSize="12dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="344dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="568dp"
        android:fontFamily="@font/adamina"
        android:text="Decrypt your name :"
        android:textAlignment="inherit"
        android:textColor="#DC4F4F"
        android:textColorHint="#FAFAFA"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Save6"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginStart="309dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:text="Save"
        android:textColor="#DC4F4F"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wanthelp3_2"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginStart="274dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/adamina"
        android:onClick="wanthelp3_2"
        android:text="?"
        android:textColor="#DC4F4F"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" />

    <TextView
        android:id="@+id/tvCipher2"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="284dp"
        android:hint="Deciphered Text"
        android:textColor="#ffffff"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Save6"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>