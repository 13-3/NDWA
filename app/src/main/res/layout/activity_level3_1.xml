<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".level3_1"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvCipher"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="292dp"
        android:hint="Chipher Text"
        android:textColor="#ffffff"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Save6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Save6" />

    <EditText
        android:id="@+id/ruselt5"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="85dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/adamina"
        android:inputType="text"
        android:scrollbarSize="12dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="403dp"
        android:layout_height="39dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="568dp"
        android:fontFamily="@font/adamina"
        android:text="Encrypt your name :"
        android:textAlignment="inherit"
        android:textColor="#DC4F4F"
        android:textColorHint="#FAFAFA"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Save5"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginStart="309dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:text="Save"
        android:textColor="#DC4F4F"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wanthelp3_1"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginStart="274dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/adamina"
        android:onClick="wanthelp3_1"
        android:text="?"
        android:textColor="#DC4F4F"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/Next1"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginStart="305dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:text="Next"
        android:textColor="#DC4F4F"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684" />


</androidx.constraintlayout.widget.ConstraintLayout>